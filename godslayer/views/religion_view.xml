<odoo>
    <data>
        <!-- DIOSES -->
        <record model="ir.ui.view" id="godslayer.religion_tree">
            <field name="name">godslayer religion</field>
            <field name="model">godslayer.religion</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="aldea" widget="many2many_tags"/>
                    <field name="dioses_qty" string="NÂº Dioses"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="godslayer.religion_form">
            <field name="name">godslayer religion</field>
            <field name="model">godslayer.religion</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                        <notebook>
                            <page string="Aldea">
                                <group>
                                    <field name="aldea"/>
                                </group>
                            </page>

                            <page string="Dioses">
                                <group>
                                    <field name="dioses"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>