<odoo>
    <data>
        <!-- DIOSES -->
        <record model="ir.ui.view" id="godslayer.dioses_tree">
            <field name="name">godslayer dios</field>
            <field name="model">godslayer.dioses</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="total"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="godslayer.dioses_form">
            <field name="name">godslayer dios</field>
            <field name="model">godslayer.dioses</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="imagen" widget="image"/>
                            </group>

                            <group>
                                <field name="health"/>
                                <field name="atack"/>
                                <field name="defense"/>
                                <field name="speed"/>
                                <field name="power"/>
                                <field name="total"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>